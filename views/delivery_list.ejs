<!DOCTYPE html>
<html lang="en" ng-app ="orderApp">

<% include ./partials/header %>

  <body>
    <!-- Page Content -->
    <div class="container">

        <h2>
        <u>Orders: </u>

        <p align="right"><a href="/delivery" class="btn-lg btn-primary">Back</a></p>

         </h2>
        <div class="row">
            <div class="col-lg-12">
                <div ng-controller="orderController">
                        <table border=1>
                        	<td><b>Date</b</td>
                            <td><b>Address</b></td>
                            <td><b>City</b></td>
                            <td><b>ZIP</b></td>
                            <td><b>State</b></td>
                            <td><b>Type of Fuel</b></td>
                            <td><b>Status</td></b>
                        	<tr ng-repeat="data in orderData | orderBy : ['Status','Date']">
	                            <td>{{ data.date }}</td>
	                            <td>{{ data.address }}</td>
	                            <td>{{ data.city }}</td>
	                            <td>{{ data.zip }}</td>
	                            <td>{{ data.state }}</td>
	                            <td>{{ data.type }}</td>
	                            <td>{{ data.status }}</td>
                         	</tr>
                     	</table>
               	 </div>
            </div>
        </div>
      </body>
</html>

<% include ./partials/footer %>
