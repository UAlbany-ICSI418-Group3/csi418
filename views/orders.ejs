                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </div>
        
        </div>
     
    </nav>

    <!-- Page Content -->
    <div class="container">

        <header class="jumbotron hero-spacer text-center" style="background-color:#ffffff">

             <p> <img src="http://i64.tinypic.com/opmkbo.png" alt="Logo" align="middle"  style="width:100 px;height:100px;"></p>

            <p> <h1><i> UA Fuel Inc.</i></h1></p><hr>
