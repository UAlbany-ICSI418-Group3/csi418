        <h2>
        <u>Orders: </u>   

        <p align="right"><a href="/delivery" class="btn-lg btn-primary">Back</a></p>

         </h2>


        <div class="row">
            <div class="col-lg-12">
                <div ng-controller="orderController">
                        <table border=1>
                        	<td><b>Date</b</td>
                            <td><b>Address</b></td>
                            <td><b>City</b></td>
                            <td><b>ZIP</b></td>
                            <td><b>State</b></td>
                            <td><b>Type of Fuel</b></td>   
                            <td><b>Status</td></b>
                        	<tr ng-repeat="data in myData | orderBy : 'Status'">
	                            <td>{{ data.Date }}</td>
	                            <td>{{ data.Address }}</td>
	                            <td>{{ data.City }}</td>
	                            <td>{{ data.ZIP }}</td>
	                            <td>{{ data.State }}</td>
	                            <td>{{ data.Type }}</td>
	                            <td>{{ data.Status }}</td>        
                         	</tr>
                     	</table>
               	 </div>
            </div>
        </div>


